<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/index.css">
    <link rel="stylesheet" href="~/css/entreterimento.css">
    <link rel="stylesheet" href="~/css/noticia.css">
    <link rel="stylesheet" href="~/css/contato.css">
    <title>CIGAD</title>
</head>
<body>
    <header>
        <div class="container-logo">
            <div class="logo-imagem">
                <img width="50" height="50" src="https://img.icons8.com/ios-filled/50/baby-feet.png" alt="baby-feet"/>
            </div>
            <div class="logo-texto">
                <h1>CIGAD</h1>
            </div>
        </div>

        <div class="menu">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Noticias">NEWS</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Entreterimento">KIDS</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contato">CONTATO</a>
            </li>
        </div>
   </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="rodape">
            <div>
                <h3>Endereço</h3>
                <p>Rua:Norberto Acosta</p>
                <p>Nº: 3222</p>
            </div>

            <div>
                <h3>Contato</h3>
                <p><img width="20" height="20" src="https://img.icons8.com/ios/20/phone--v1.png" alt="phone--v1"/>(55)9853322</p>
                <p><img width="20" height="20" src="https://img.icons8.com/ios/50/email.png" alt="email"/>cigad@gmail.com</p>
            </div>

            <div>
                <h3>Redes Sociais</h3>
                <p class="face"><img width="20" height="20" src="https://img.icons8.com/ios/50/facebook--v1.png" alt="facebook--v1"/>Facebook</p>
                <p class="insta"><img width="20" height="20" src="https://img.icons8.com/ios/50/000000/instagram-new--v1.png" alt="instagram-new--v1"/>Instagram</p>
            </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/index.js"></script>
    <script src="~/js/form.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>